<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moveup"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_web"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" android:screenOrientation="portrait"/>
        <activity android:name=".Login" android:screenOrientation="portrait"/>
        <activity android:name=".MainInterface" android:screenOrientation="portrait"/>
        <activity android:name=".LoseWeight" android:screenOrientation="portrait"/>
        <activity android:name=".Yoga" android:screenOrientation="portrait"/>
        <activity android:name=".Stretch" android:screenOrientation="portrait"/>
        <activity android:name=".Strength" android:screenOrientation="portrait"/>

        <service
            android:name=".TimerService"
            android:exported="false" />

        <activity android:name=".Me" android:screenOrientation="portrait"/>
        <activity android:name=".Suggestion" android:label="@string/title_activity_suggestion" android:screenOrientation="portrait"/>
    </application>

</manifest>